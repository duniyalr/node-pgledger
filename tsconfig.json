{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["test", "node_modules"]
}
